<h3 class="ui header">{{t "forms.i-i-s-primer-документ-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.iD
      class=(if (v-get validationModel "iD" "isInvalid") "error")
      label=(t "forms.i-i-s-primer-документ-e.iD-caption")
      data-test-i-i-s-primer-документ-e-iD=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "iD" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.описание
      class=(if (v-get validationModel "описание" "isInvalid") "error")
      label=(t "forms.i-i-s-primer-документ-e.описание-caption")
      data-test-i-i-s-primer-документ-e-описание=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "описание" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-primer-документ-e.тЧ-caption"}}</label>
    {{flexberry-groupedit
      componentName="тЧGroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.тЧ
      content=model.тЧ
      readonly=readonly
      orderable=false
      class=(if (v-get validationModel "тЧ" "isInvalid") "error")
      data-test-i-i-s-primer-документ-e-тЧ=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "тЧ" "message")}}
  </div>
</form>
